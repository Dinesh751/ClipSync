# ClipSync Upload Service Configuration

# Server Configuration
PORT=5002
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# File Upload Size Limits
REQUEST_SIZE=500mb
MAX_FILE_SIZE=500mb
MIN_FILE_SIZE=1mb

# Chunked Upload Configuration
CHUNK_SIZE=5mb
MAX_CONCURRENT_UPLOADS=10

# Allowed Video Formats
ALLOWED_FORMATS=mp4,avi,mov,wmv,webm,mkv

# Storage Configuration
STORAGE_TYPE=local
LOCAL_STORAGE_PATH=./uploads
TEMP_STORAGE_PATH=./temp

# AWS S3 Configuration (for future use)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# AWS_BUCKET_NAME=clipsync-videos

# Database Configuration (for future use)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=clipsync
# DB_USERNAME=postgres
# DB_PASSWORD=your-password

# Kafka Configuration (for future use)
# KAFKA_BROKERS=localhost:9092
# KAFKA_TOPIC_VIDEO_UPLOADED=video.uploaded
# KAFKA_TOPIC_VIDEO_PROCESSED=video.processed